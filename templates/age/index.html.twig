{% extends 'base.html.twig' %}

{% block title %}Age index{% endblock %}

{% block body %}
    <h1>Age index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Categorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for age in ages %}
            <tr>
                <td>{{ age.id }}</td>
                <td>{{ age.categorie }}</td>
                <td>
                    <a href="{{ path('app_age_show', {'id': age.id}) }}">show</a>
                    <a href="{{ path('app_age_edit', {'id': age.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_age_new') }}">Create new</a>
{% endblock %}
