{% extends 'base.html.twig' %}

{% block title %}Gestion des auteur(e)s{% endblock %}
{% block h1 %}Gestion des|{{auteurs|length}} {% endblock %}
{% block body %}

    <table class="table table-info text-center table-bordered table-hover mt-4">
        <thead class="table-warning">
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for auteur in auteurs %}
            <tr>
                <td>{{ auteur.id }}</td>
                <td>{{ auteur.prenom }}</td>
                <td>{{ auteur.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">Modifier</a>
                </td>
                <td>
                    <a 
                        class="btn btn-danger"
                        onclick="return confirm('Etes-vous sûr de vouloir supprimer cet auteur ?')" 
                        href="{{ path('app_auteur_delete', {'id': auteur.id}) }}"
                    >Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_auteur_new') }}">Ajouter</a>
{% endblock %}
