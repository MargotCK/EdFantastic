{% extends 'base.html.twig' %}

{% block title %}Gestion des illustrateurs(trices){% endblock %}
{% block h1 %}Gestion des illustrateurs(trices)|({{ illustrateurs|length }}){% endblock %}
{% block body %}


    <table class="table table-info text-center table-bordered table-hover mt-4">
    
        <thead class="table-warning">
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for illustrateur in illustrateurs %}
            <tr>
                <td>{{ illustrateur.id }}</td>
                <td>{{ illustrateur.prenom }}</td>
                <td>{{ illustrateur.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_illustrateur_edit', {'id': illustrateur.id}) }}">Modifier</a>
                </td>
                <td>
                    <a 
                        class="btn btn-danger"
                        onclick="return confirm('Etes-vous sûr de vouloir supprimer cet illustrateur ?')" 
                        href="{{ path('app_illustrateur_delete', {'id': illustrateur.id}) }}"
                    >Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun produit</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_illustrateur_new') }}">Ajouter</a>
{% endblock %}
