{% extends 'base.html.twig' %}

{% block title %}Gestion des livres{% endblock %}
{% block h1 %}Gestion des livres({{ livres|length }}){% endblock %}
{% block body %}
    
    <a class="btn btn-info" href="{{ path('app_livre_new') }}">Ajouter</a>
    {% if livres %}

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titre</th>
                    <th>Ean</th>
                    <th>Prix (€)</th>
                    <th>QuantiteStock</th>
                    <th>Couv1</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for livre in livres %}
                <tr>
                    <td>{{ livre.id }}</td>
                    <td>{{ livre.titre }}</td>
                    <td>{{ livre.ean }}</td>
                    <td>{{ livre.prix }}</td>
                    <td>{{ livre.quantiteStock }}</td>
                    <td>
                        <img src="{{asset('imageCouv1/'~ livre.couv1)}}" alt="" class="w-25">
                    </td>
                    
                    <td>
                        <a class="btn btn-warning" href="{{ path('app_livre_show', {'id': livre.id}) }}">Fiche</a>
                        <a class="btn btn-primary" href="{{ path('app_livre_edit', {'id': livre.id}) }}">Modifier</a>
                    </td>
                    <td>
                        <a 
                            class="btn btn-danger"
                            onclick="return confirm('Etes-vous sûr de vouloir supprimer cet article ?')" 
                            href="{{ path('app_livre_delete', {'id': livre.id}) }}"
                            >Supprimer</a>
                        </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h4 class="text-danger text-center fst-italic mt-4"> Aucun produit</h4>
        
    {% endif %}

{% endblock %}
