{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}
{% block h1 %}{{ livre.titre|capitalize }}{% endblock %}
{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Ean</th>
                <td>{{ livre.ean }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ livre.age.categorie }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>DatePublication</th>
                <td>{{ livre.datePublication ? livre.datePublication|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Format</th>
                <td>{{ livre.format }}</td>
            </tr>
            <tr>
                <th>QuantiteStock</th>
                <td>{{ livre.quantiteStock }}</td>
            </tr>
            <tr>
                <th>Couv1</th>
                <td>
                {% if livre.couv1 %}
                    <img src="{{asset('imageCouv1/'~ livre.couv1)}}" alt="" class="w-25">
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Couv4</th>
                <td>
                {% if livre.couv4 %}
                    <img src="{{asset('imageCouv4/'~ livre.couv4)}}" alt="" class="w-25">
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ livre.resume }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_livre_index') }}">Retour</a>

    <a class="btn btn-primary" href="{{ path('app_livre_edit', {'id': livre.id}) }}">Modifier</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
