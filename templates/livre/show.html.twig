{% extends 'base.html.twig' %}

{% block title %}Afficher les livres{% endblock %}

{% block h1 %}{{ livre.titre }}{% endblock %}

{% block body %}
    
    <a class="btn btn-dark" href="{{ path('app_livre_index') }}">Retour</a>

    <table class="table table-hover mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Ean</th>
                <td>{{ livre.ean }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>QuantiteStock</th>
                <td>{{ livre.quantiteStock }}</td>
            </tr>
            <tr>
                <th>1ère de couverture</th>
                <td>
                {% if livre.couv1 %}
                    <img src="{{asset('imageCouv1/'~ livre.couv1)}}" alt="" class="w-25">
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
                </td>
            </tr>
            tr>
            <th>4ème de couverture</th>
            <td>
                {% if livre.couv4 %}
                    <img src="{{asset('imageCouv1/'~ livre.couv1)}}" alt="" class="w-25">
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Résumé</th>
            <td>
                {% if  livre.resumeLivre %}
                    {{ livre.resumeLivre}}
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Format</th>
            <td>
                {% if  livre.format %}
                    {{ livre.format|capitalize }}
                {% else %}
                    <span class="fst-italic text-danger">Non renseignée</span>
                {% endif %}
            </td>
        </tr>

        <tr>
            <th>Nombre de pages</th>
            <td>{{ livre.nbPage }}</td>
        </tr>

        </tbody>
    </table>

    
{% endblock %}
