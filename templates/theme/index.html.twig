{% extends 'base.html.twig' %}

{% block title %}Gestion des thèmes{% endblock %}
{% block h1 %}Gestion des thèmes|({{ themes|length }}){% endblock %}
{% block body %}

    <table class="table table-info text-center table-bordered table-hover mt-4">

        <thead class="table-warning">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for theme in themes %}
            <tr>
                <td>{{ theme.id }}</td>
                <td>{{ theme.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_theme_edit', {'id': theme.id}) }}">Modifier</a>
                </td>
                <td>
                    <a 
                        class="btn btn-danger"
                        onclick="return confirm('Etes-vous sûr de vouloir supprimer ce thème?')" 
                        href="{{ path('app_theme_delete', {'id': theme.id}) }}"
                    >Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun produit
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_theme_new') }}">Ajouter</a>
{% endblock %}
