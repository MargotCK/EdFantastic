{% extends 'base.html.twig' %}

{% block title %}Gestion des auteurs{% endblock %}
{% block h1 %}{% endblock %}
{% block body %}
    
    <a class="btn btn-info" href="{{ path('app_user_new') }}">Ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.nom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">Fiche</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun r√©sultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
