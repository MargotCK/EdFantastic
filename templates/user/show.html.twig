{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    
    <a href="{{ path('app_user_index') }}">Retour</a>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            
        </tbody>
    </table>


    <a class="btn btn-primary mb-2" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
